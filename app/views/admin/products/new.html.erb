<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.image.present? %>
   <span>展示商品图</span> <br>
   <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <div class="group">
   <%= f.input :image, as: :file %>
  </div>

<div class="group">
  <%= f.label :avatar %><br>
  <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
</div>

  <div class="group">
    <%= f.select :category_id, @categories %>
  </div>

  <div class="group">
    <%= f.input :is_hidden %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
